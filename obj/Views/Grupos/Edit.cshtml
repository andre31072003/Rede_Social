@model TrabalhoLab.Models.Grupo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Grupos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GrupoId" />
            <div class="form-group">
                <label asp-for="NomeGrupo" class="control-label"></label>
                <input asp-for="NomeGrupo" class="form-control" />
                <span asp-validation-for="NomeGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAcesso" class="control-label"></label>
                <input asp-for="TipoAcesso" class="form-control" />
                <span asp-validation-for="TipoAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeDoCriadorGrupo" class="control-label"></label>
                <input asp-for="NomeDoCriadorGrupo" class="form-control" />
                <span asp-validation-for="NomeDoCriadorGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
