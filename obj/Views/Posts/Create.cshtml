@model TrabalhoLab.Models.Posts

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Posts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoPublicacao" class="control-label">Foto de Perfil</label>
                <input asp-for="FotoPublicacao" type="file" class="form-control" />
                <span asp-validation-for="FotoPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPost" class="control-label"></label>
                <select asp-for="TipoPost" class="form-control">
                    <option value="">Selecione...</option>
                    <option value="Publico">Público</option>
                    <option value="Privado">Privado</option>
                </select>
                <span asp-validation-for="TipoPost" class="text-danger"></span>
            </div>
             <input type="hidden" asp-for="GrupoId" value="@ViewBag.GrupoId" />
            @* <div>GrupoId: @ViewBag.GrupoId</div> *@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
