@section Scripts {
    <script>
        $(document).ready(function () {
            $("#denunciaForm").submit(function (e) {
                e.preventDefault(); // Impede a submissão padrão do formulário

                // Envie os dados do formulário usando Ajax
                $.ajax({
                    url: $(this).attr("action"),
                    method: $(this).attr("method"),
                    data: $(this).serialize(),
                    success: function (data) {
                        // Redireciona para a página de índice
                        window.location.replace('@Url.Action("FeedSemConta", "Home")');

                        // Exibe o pop-up de sucesso usando o Bootstrap Modal
                        $("#denunciaModal").modal("show");
                    },
                    error: function (error) {
                        console.error("Erro ao processar a denúncia:", error);
                    }
                });
            });
        });
    </script>
}

<!-- Modal de Sucesso -->
<div class="modal fade" id="denunciaModal" tabindex="-1" role="dialog" aria-labelledby="denunciaModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="denunciaModalLabel">Denúncia Submetida com Sucesso</h5>
            </div>
            <div class="modal-body">
                Sua denúncia foi submetida com sucesso. Obrigado por relatar.
            </div>
        </div>
    </div>
</div>
