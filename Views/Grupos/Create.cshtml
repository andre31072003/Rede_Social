@model TrabalhoLab.Models.Grupo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Grupos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeGrupo" class="control-label"></label>
                <input asp-for="NomeGrupo" class="form-control" />
                <span asp-validation-for="NomeGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAcesso" class="control-label"></label>
                <select asp-for="TipoAcesso" class="form-control">
                    <option value="">Selecione...</option>
                    <option value="Publico">Público</option>
                    <option value="Privado">Privado</option>
                </select>
                <span asp-validation-for="TipoAcesso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar Novo Grupo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
